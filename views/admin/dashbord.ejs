<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .card{
            transition: all ease-in-out 200ms;
        }
        .card:hover{
            transform: scale(1.01);
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.621) !important;
        }
        
    </style>
</head>
<body>
    

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href=".">Admin Dashboard</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/home">Home</a>
                </li>
                <li class="nav-item">
                    <a href="/admin/user" class="btn btn-link nav-link">User</a>
                </li>
                <li class="nav-item">
                    <a href="/admin/subjects"class="btn btn-link nav-link">Post</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>
    <hr class="p-0 m-0 text-white bg-white">
    <%- include('../includes/flash.ejs') %>
   
    <div class="container mt-5" >
        <div class="row">
            <div class="col-md-4 ">
                <div class="card bg-dark text-light shadow">
                    <div class="card-header">
                        Users
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Manage Users</h5>
                        <p class="card-text">View, edit, and delete users accounts.</p><br><br>
                        <a href="/admin/user" class="btn btn-outline-light shadow">Go to Users</a><br>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-light bg-dark shadow">
                    <div class="card-header">
                        Subjects
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Manage Subjects</h5>
                        <p class="card-text">View, add, edit, and delete subjects and topics.</p><br>
                        <a href="/admin/subjects"  class="btn btn-outline-light shadow">Go to Subjects</a><br>
                    </div>
                </div>
            </div>
            
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
