<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Topics Management</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href=".">Admin Dashboard</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/home">Home</a>
                </li>
                <li class="nav-item">
                    <a href="/admin/user" class="btn btn-link nav-link">User</a>
                </li>
                <li class="nav-item">
                    <a href="/admin/subjects"class="btn btn-link nav-link">Post</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>
        <%- include('../includes/flash.ejs') %>
        <br><br>
        <div class="container mt-5 backBtn">
            <button class="btn btn-primary" onclick="goBack()">
                <i class="fas fa-arrow-left"></i> Back
            </button>
            <script>
                function goBack() {
                    window.history.back();
                }
            </script>
        </div>
        <main class="container">
            <section id="users">
                <h2 class="mb-3"><%- subject.subject  %> Management</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">S. No.</th>
                            <th scope="col">Topic Title</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="userTableBody">
                        <% subject.topics.forEach(topic => { %>
                            <tr>
                                <td><%= topic.id %></td>
                                <td><%= topic.topic %></td>
                                <td>
                                    <a class="btn btn-warning" href="/admin/subjects/<%= subject.id %>/<%= topic.id %>">Edit</a>
                                    <button class="btn btn-danger" onclick="deleteTopic('<%= topic.id %>')">Delete</button>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                    <tfoot class="bg-dark">
                        <tr>
                            <form action="/admin/subjects/<%- subject.id %>" method="post">
                            <td colspan="2">
                                <label class="fw-bold text-light" for="subject">Add Subject: </label>
                                <input placeholder="Subject" name="topic" id="subject" class="mx-3 px-3 bg-dark text-light mt-1" style="width: 80%;">
                            </td>
                            <td><button class="btn btn-outline-success px-4" type="submit">Add</button></td>
                            </form>
                        </tr>
                    </tfoot>
                </table>
            </section>
        </main>  
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script>
        async function deleteTopic(subId) {
            try {
              const response = await fetch(`/admin/subjects/<%= subject.id %>/${subId}`, {
                method: 'DELETE',
              });
          
              if (response.ok) {
                location.reload(); 
              } else {
                const errorData = await response.json();
                flash('error', `Error: ${errorData.message}`);
              }
            } catch (error) {
              console.error('Error deleting subject:', error);
              flash('error','An error occurred while deleting the subject');
            }
          };

    </script>
</body>
</html>
